<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DndManager.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Button
                Text="I'm a Dungeon Master" 
                HorizontalOptions="Fill" 
                Clicked="OnMasterClicked"/>

            <Button
                Text="I'm a Player" 
                HorizontalOptions="Fill" 
                Clicked="OnPlayerClicked"/>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
